# Configuración adicional para noVNC + Balatro

# Variables de entorno para optimización
export NOVNC_RESIZE=scale
export NOVNC_AUTOCONNECT=1
export NOVNC_RECONNECT=1
export NOVNC_QUALITY=9
export NOVNC_COMPRESSION=2

# Configuración de display para gaming
export DISPLAY=:1
export XVFB_RESOLUTION=1920x1080x24
export XVFB_SCREEN=0

# Configuración de VNC para baja latencia
export VNC_POLL_RATE=60
export VNC_POINTER_MODE=absolute

# Configuración de Streamlit
export STREAMLIT_SERVER_PORT=8501
export STREAMLIT_SERVER_ADDRESS=0.0.0.0
export STREAMLIT_SERVER_HEADLESS=true
export STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Configuración de red
export WEBSOCKIFY_PORT=6080
export VNC_PORT=5900
export API_PORT=8000
export MCP_PORT=8001
